.radar-chart-container {
  width: 100%;
  /* 使用宽度的值作为高度，确保是正方形 */
  height: 0;
  padding-bottom: 100%; /* 使容器高度等于宽度 */
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  border-radius: 8rpx;
}

#radarCanvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
} 